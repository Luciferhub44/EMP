{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "outDir": "dist",
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@src/*": ["src/*"],
      "@types/*": ["src/types/*"],
      "@src/data/*": ["src/data/*"],
      "@src/lib/*": ["src/lib/*"],
      "@src/lib/utils/*": ["src/lib/utils/*"],
      "@src/lib/services/*": ["src/lib/services/*"],
    }
  },
  "include": ["server.js", "src/**/*"],
  "exclude": ["node_modules"]
} 