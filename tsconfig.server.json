{
  "compilerOptions": {
    "allowJs": true,
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "outDir": "dist",
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@data/*": ["src/data/*"]
    }
  },
  "include": ["server.ts", "src/data/*", "src/types/*"],
  "exclude": ["node_modules", "dist"]
} 